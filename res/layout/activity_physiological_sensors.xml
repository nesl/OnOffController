<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="center"
    android:orientation="vertical" >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:text="ECG"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <ToggleButton
        android:id="@+id/toggle_ecg"
        android:layout_width="80dip"
        android:layout_height="70dip"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:onClick="onToggleECGClicked"
        android:textOff="Off"
        android:textOn="On" />

    <Button
        android:id="@+id/countdown_button_ecg"
        android:layout_width="100dip"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:gravity="center"
        android:text="00:00:00"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:visibility="invisible" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:text="Breathing"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <ToggleButton
        android:id="@+id/toggle_respiration"
        android:layout_width="80dip"
        android:layout_height="70dip"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:onClick="onToggleRespirationClicked"
        android:textOff="Off"
        android:textOn="On" />

    <Button
        android:id="@+id/countdown_button_respiration"
        android:layout_width="100dip"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:gravity="center"
        android:text="00:00:00"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:visibility="invisible" />

</LinearLayout>