<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="center"
    android:orientation="vertical" >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Activity"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <ToggleButton
        android:id="@+id/toggle_activity"
        android:layout_width="90dip"
        android:layout_height="55dip"
        android:onClick="onToggleActivityClicked"
        android:textOff="Off"
        android:textOn="On" />

    <Button
        android:id="@+id/countdown_button_activity"
        android:layout_width="100dip"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:gravity="center"
        android:text="00:00:00"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:visibility="invisible" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Stress"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <ToggleButton
        android:id="@+id/toggle_stress"
        android:layout_width="90dip"
        android:layout_height="55dip"
        android:onClick="onToggleStressClicked"
        android:textOff="Off"
        android:textOn="On" />

    <Button
        android:id="@+id/countdown_button_stress"
        android:layout_width="100dip"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:gravity="center"
        android:text="00:00:00"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:visibility="invisible" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Conversation"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <ToggleButton
        android:id="@+id/toggle_conversation"
        android:layout_width="90dip"
        android:layout_height="55dip"
        android:onClick="onToggleConversationClicked"
        android:textOff="Off"
        android:textOn="On" />

    <Button
        android:id="@+id/countdown_button_conversation"
        android:layout_width="100dip"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:gravity="center"
        android:text="00:00:00"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:visibility="invisible" />

</LinearLayout>